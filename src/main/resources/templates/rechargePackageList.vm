        <div class="span12">
            <h3>套餐列表</h3>
            <button type="button" class="btn btn-primary" onclick="addPackageUI()">添加</button>
            <table class="table table-hover">
                <thead>
                <tr>
                    <td>编号</td>
                    <td>套餐名</td>
                    <td>套餐图片</td>
                    <td>套餐价格</td>
                    <td>充值游戏币</td>
                    <td>状态</td>

                    <td>创建时间</td>
                    <td>操作</td>
                </tr>
                </thead>
                <tbody>
                    #foreach($p in $list)
                    <tr>
                        <td>$p.id</td>
                        <td>$p.packageName</td>
                        <td>$p.packageUrl</td>
                        <td>$p.price</td>
                        <td>$p.gameMoney</td>
                        <td>$p.status</td>

                        <td>$date.format('yyyy-MM-dd HH:mm:ss ',$p.createTime)</td>
                        <td><a href="/admin/order/getRechargePackage?id=$p.id">编辑</a> <a href="/admin/order/deletePackage?id=$p.id">删除</a></td>
                    </tr>
                    #end
                </tbody>
            </table>
